---
const servicios = [
  {
    titulo: "Desarrollo Web",
    descripcion: "Creamos sitios web modernos, adaptables y optimizados para tu negocio con las últimas tecnologías.",
  },
  {
    titulo: "Aplicaciones Móviles",
    descripcion: "Apps nativas y multiplataforma con excelente experiencia de usuario y rendimiento optimizado.",
  },
  {
    titulo: "Branding Digital",
    descripcion: "Potenciamos tu marca con contenido visual e identidad sólida que conecte con tu audiencia.",
  },
  {
    titulo: "Auditoría UX/UI",
    descripcion: "Analizamos y mejoramos la experiencia de tus usuarios para maximizar conversiones.",
  },
  {
    titulo: "E-commerce",
    descripcion: "Tiendas online completas con sistemas de pago seguros y gestión de inventario.",
  },
  {
    titulo: "Consultoría Digital",
    descripcion: "Estrategias digitales personalizadas para hacer crecer tu negocio online.",
  },
];

// Duplicamos los servicios para crear el efecto infinito
const serviciosDuplicados = [...servicios, ...servicios];
---

<section class="py-16 lg:py-24 bg-gradient-to-br from-slate-50 via-blue-50 to-indigo-50 overflow-hidden">
  <div class="container mx-auto px-4 mb-12">
    <h2 class="text-4xl md:text-5xl lg:text-6xl font-bold text-center mb-6">
      <span class="bg-gradient-to-r from-purple-600 via-pink-600 to-blue-600 bg-clip-text text-transparent">
        Servicios que ofrecemos
      </span>
    </h2>
    <p class="text-lg text-center text-gray-600 max-w-2xl mx-auto">
      Soluciones digitales integrales para impulsar tu negocio
    </p>
  </div>

  <div class="relative">
    <!-- Gradientes de desvanecimiento a los lados -->
    <div class="absolute left-0 top-0 w-32 h-full bg-gradient-to-r from-slate-50 to-transparent z-10 pointer-events-none"></div>
    <div class="absolute right-0 top-0 w-32 h-full bg-gradient-to-l from-slate-50 to-transparent z-10 pointer-events-none"></div>
    
    <!-- Contenedor de la cinta -->
    <div class="carousel-container overflow-hidden">
      <div class="carousel-track flex gap-8 animate-scroll">
        {serviciosDuplicados.map((item, index) => (
          <div
            class="service-card flex-shrink-0 w-80 lg:w-96 bg-white rounded-2xl border border-gray-200 shadow-lg hover:shadow-xl transition-all duration-500 p-8 group hover:scale-105"
          >
            <div class="flex justify-center mb-6">
              <div class="w-16 h-16 lg:w-20 lg:h-20 rounded-xl bg-gradient-to-br from-purple-500 to-blue-600 flex items-center justify-center shadow-lg group-hover:shadow-xl transition-all duration-300">
                <svg
                  width="32"
                  height="32"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="white"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  class="lg:w-10 lg:h-10"
                >
                  <path
                    d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z"
                  />
                </svg>
              </div>
            </div>
            <h3 class="text-xl lg:text-2xl font-bold text-center text-gray-800 mb-4 group-hover:text-purple-600 transition-colors duration-300">
              {item.titulo}
            </h3>
            <p class="text-base lg:text-lg text-center text-gray-600 leading-relaxed">
              {item.descripcion}
            </p>
            
            <!-- Indicador de hover -->
            <div class="mt-6 flex justify-center">
              <div class="w-8 h-1 bg-gradient-to-r from-purple-500 to-blue-600 rounded-full opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>

<style>
  .carousel-container {
    mask-image: linear-gradient(
      to right,
      transparent 0%,
      black 8%,
      black 92%,
      transparent 100%
    );
    -webkit-mask-image: linear-gradient(
      to right,
      transparent 0%,
      black 8%,
      black 92%,
      transparent 100%
    );
  }

  @keyframes scroll {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  .animate-scroll {
    animation: scroll 30s linear infinite;
  }

  /* Pausar animación al hacer hover */
  .carousel-container:hover .animate-scroll {
    animation-play-state: paused;
  }

  /* Efecto de brillo en las tarjetas */
  .service-card {
    position: relative;
    overflow: hidden;
  }

  .service-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      90deg,
      transparent,
      rgba(255, 255, 255, 0.2),
      transparent
    );
    transition: left 0.5s;
  }

  .service-card:hover::before {
    left: 100%;
  }

  @media (max-width: 768px) {
    .animate-scroll {
      animation: scroll 20s linear infinite;
    }
  }
</style>