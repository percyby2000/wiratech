---
// Datos de contacto y enlaces
const enlacesRapidos = [
  { nombre: "Inicio", url: "/" },
  { nombre: "Servicios", url: "/#servicios" },
  { nombre: "Nosotros", url: "/#nosotros" },
  { nombre: "Contacto", url: "/#contacto" }
];

const servicios = [
  { nombre: "Desarrollo de Software", url: "/#software" },
  { nombre: "Sitios Web", url: "/#web" },
  { nombre: "Apps Móviles", url: "/#apps" },
  { nombre: "Asesoría IT", url: "/#asesoria" }
];

const redesSociales = [
  { nombre: "GitHub", icono: "github", url: "https://github.com/wiratech" },
  { nombre: "LinkedIn", icono: "linkedin", url: "https://linkedin.com/company/wiratech" },
  { nombre: "Twitter", icono: "twitter", url: "https://twitter.com/wiratech" },
  { nombre: "Instagram", icono: "instagram", url: "https://instagram.com/wiratech" }
];
---

<footer class="bg-gray-900 text-white">
  <!-- Sección principal del footer -->
  <div class="container mx-auto px-4 lg:px-8 py-16">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      
      <!-- Logo y descripción -->
      <div class="lg:col-span-1">
        <div class="flex items-center mb-6">
          <img src="/logo.svg" alt="Wiratech" class="h-8 w-auto filter brightness-0 invert" />
          <span class="ml-2 text-xl font-bold">Wiñatech</span>
        </div>
        <p class="text-gray-300 mb-6 leading-relaxed">
          Soluciones digitales innovadoras para impulsar tu negocio. Desarrollo de software, sitios web y aplicaciones móviles.
        </p>
        
        <!-- Icono Git personalizado -->
        <div class="flex items-center space-x-4">
          <div class="bg-gray-800 p-3 rounded-lg hover:bg-gray-700 transition-colors duration-300">
            <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
            </svg>
          </div>
          <div class="text-sm">
            <p class="text-gray-300">Diseñado por</p>
            <p class="font-semibold text-white">Wiñatech</p>
          </div>
        </div>
      </div>

      <!-- Enlaces rápidos -->
      <div>
        <h3 class="text-lg font-semibold mb-6 text-white">Enlaces Rápidos</h3>
        <ul class="space-y-3">
          {enlacesRapidos.map(enlace => (
            <li>
              <a href={enlace.url} class="text-gray-300 hover:text-white transition-colors duration-300">
                {enlace.nombre}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Servicios -->
      <div>
        <h3 class="text-lg font-semibold mb-6 text-white">Servicios</h3>
        <ul class="space-y-3">
          {servicios.map(servicio => (
            <li>
              <a href={servicio.url} class="text-gray-300 hover:text-white transition-colors duration-300">
                {servicio.nombre}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Contacto -->
      <div>
        <h3 class="text-lg font-semibold mb-6 text-white">Contacto</h3>
        <div class="space-y-4">
          <div class="flex items-center space-x-3">
            <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
            </svg>
            <span class="text-gray-300">contacto@wiñatech.com</span>
          </div>
          <div class="flex items-center space-x-3">
            <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
            </svg>
            <span class="text-gray-300">+51 913 882 945</span> 
          </div>
          <div class="flex items-center space-x-3">
            <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
            </svg>
            <span class="text-gray-300">Peru</span>
          </div>
        </div>

        <!-- Redes sociales -->
        <div class="mt-6">
          <h4 class="text-sm font-semibold mb-4 text-gray-300">Síguenos</h4>
          <div class="flex space-x-4">
            {redesSociales.map(red => (
              <a href={red.url} class="bg-gray-800 p-2 rounded-lg hover:bg-gray-700 transition-colors duration-300" title={red.nombre}>
                <svg class="w-5 h-5 text-gray-300 hover:text-white transition-colors duration-300" fill="currentColor" viewBox="0 0 24 24">
                  {red.icono === "github" && (
                    <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                  )}
                  {red.icono === "linkedin" && (
                    <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                  )}
                  {red.icono === "twitter" && (
                    <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
                  )}
                  {red.icono === "instagram" && (
                    <path d="M12.017 0C5.396 0 .029 5.367.029 11.987c0 6.62 5.367 11.987 11.988 11.987 6.62 0 11.987-5.367 11.987-11.987C24.014 5.367 18.637.001 12.017.001zM8.449 16.988c-1.297 0-2.448-.49-3.323-1.297C4.198 14.895 3.708 13.744 3.708 12.447s.49-2.448 1.418-3.323c.875-.807 2.026-1.297 3.323-1.297s2.448.49 3.323 1.297c.928.875 1.418 2.026 1.418 3.323s-.49 2.448-1.418 3.244c-.875.807-2.026 1.297-3.323 1.297zm7.718-1.297c-.875.807-2.026 1.297-3.323 1.297s-2.448-.49-3.323-1.297c-.928-.875-1.418-2.026-1.418-3.244s.49-2.448 1.418-3.323c.875-.807 2.026-1.297 3.323-1.297s2.448.49 3.323 1.297c.928.875 1.418 2.026 1.418 3.323s-.49 2.448-1.418 3.244z"/>
                  )}
                </svg>
              </a>
            ))}
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Línea divisoria -->
  <div class="border-t border-gray-800">
    <div class="container mx-auto px-4 lg:px-8 py-6">
      <div class="flex flex-col md:flex-row justify-between items-center">
        <p class="text-gray-400 text-sm">
          © 2025 Wiñatech. Todos los derechos reservados.
        </p>
        <div class="flex space-x-6 mt-4 md:mt-0">
          <a href="/privacidad" class="text-gray-400 hover:text-white text-sm transition-colors duration-300">
            Política de Privacidad
          </a>
          <a href="/terminos" class="text-gray-400 hover:text-white text-sm transition-colors duration-300">
            Términos de Servicio
          </a>
        </div>
      </div>
    </div>
  </div>
</footer>

<style>
  /* Efectos hover suaves */
  footer a:hover {
    transform: translateY(-1px);
  }
  
  /* Animación sutil para el icono de Git */
  footer svg:hover {
    transform: scale(1.1);
  }
  
  /* Transiciones suaves */
  footer * {
    transition: all 0.3s ease;
  }
</style>
